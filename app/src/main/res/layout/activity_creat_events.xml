<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="#FFFFEF"
    android:id="@+id/layout02"
    android:scrollbars="vertical"
    android:windowSoftInputMode="adjustNothing"
    tools:context="com.example.aniomi.myapplication.CreatEventsActivity">

    <EditText
        android:id="@+id/editText8"
        android:focusable="true"
        android:hint="Event's Name"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:backgroundTint="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/editText12"
        android:layout_alignEnd="@+id/editText12"
        android:layout_alignLeft="@+id/Loc"
        android:layout_alignStart="@+id/Loc" />

    <EditText
        android:id="@+id/editText11"
        android:textAlignment="center"
        android:hint="Date"
        android:focusable="false"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:scrollbars = "vertical"
        android:textColor="#000000"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:backgroundTint="#000000"
        android:layout_below="@+id/editText8"
        android:layout_alignLeft="@+id/editText8"
        android:layout_alignStart="@+id/editText8" />

    <EditText
        android:id="@+id/editText12"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:textAlignment="center"
        android:textColor="#000000"
        android:ems="10"
        android:hint="Time"
        android:backgroundTint="#000000"
        android:layout_alignBottom="@+id/editText11"
        android:layout_alignRight="@+id/editText6"
        android:layout_alignEnd="@+id/editText6" />

    <TextView
        android:id="@+id/editText6"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:padding="4dp"
        android:hint="Description....."
        android:ellipsize="end"
        android:textSize="20dp"
        android:gravity="top|left"
        android:focusable="false"
        android:maxLines = "2000"
        android:textColor="#000000"
        android:scrollbars = "vertical"
        android:layout_below="@+id/Loc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <EditText
        android:id="@+id/Loc"
        android:focusable="false"
        android:hint="Location"
        android:textColor="#000000"
        android:ellipsize="end"
        android:textAlignment="center"
        android:scrollbars = "vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/editText11"
        android:backgroundTint="#000000"
        android:layout_alignLeft="@+id/editText6"
        android:layout_alignStart="@+id/editText6"
        android:layout_alignRight="@+id/editText12"
        android:layout_alignEnd="@+id/editText12" />


    <!--
    <ImageButton
        android:id="@+id/imageButton"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_edit_black_36dp"
        android:layout_alignTop="@+id/Loc"
        android:layout_alignRight="@+id/Loc"
        android:layout_alignEnd="@+id/Loc" /> -->


</RelativeLayout>